# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Application
APP_DOMAIN=bruh.ngl.app
NEXT_PUBLIC_APP_URL=https://bruh.ngl.app

# Authentication: Using Supabase built-in email auth (magic link)
# No external OAuth setup needed - Supabase handles everything!
# Optional: Enable social providers (Google, GitHub) in Supabase dashboard

# UPI Payment Provider (Paytm for India)
UPI_PROVIDER=paytm
UPI_PROVIDER_MID=your-paytm-merchant-id
UPI_PROVIDER_KEY=your-paytm-merchant-key
UPI_PROVIDER_WEBSITE=WEBSTAGING
PAYTM_ENVIRONMENT=staging  # or 'production'
# Get credentials from: https://dashboard.paytm.com/next/apikeys

# Security
RATE_LIMIT_SALT=generate-random-32-char-string-here
# Generate with: openssl rand -base64 32

# Optional: Email notifications (alternative to push notifications)
# Configure SMTP for email alerts when you receive messages
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Docker Registry (for CI/CD)
GITHUB_DOCKER_REGISTRY=ghcr.io/dschauhan08
DOCKER_REGISTRY_USERNAME=dschauhan08
DOCKER_REGISTRY_PASSWORD=your-github-token
